{
  "name": "claude-code-ts-hooks",
  "version": "1.0.0",
  "description": "TypeScript types and utilities for Claude Code hooks - providing type safety for hook implementations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.esm.js",
  "files": [
    "dist/**/*",
    "src/**/*",
    "examples/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "hooks",
    "typescript",
    "types",
    "anthropic",
    "ai",
    "sdk"
  ],
  "author": "Claude Code Community",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucacri/claude-code-ts-hooks.git"
  },
  "bugs": {
    "url": "https://github.com/lucacri/claude-code-ts-hooks/issues"
  },
  "homepage": "https://github.com/lucacri/claude-code-ts-hooks#readme",
  "devDependencies": {
    "@types/node": "^20.19.17",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "zod": "^3.25.76"
  },
  "peerDependencies": {
    "@anthropic-ai/claude-code": "^1.0.0"
  },
  "peerDependenciesMeta": {
    "@anthropic-ai/claude-code": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
