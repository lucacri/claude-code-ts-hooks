{
  "name": "@lucacri/claude-code-ts-hooks",
  "jsr": true,
  "type": "module",
  "version": "2.0.0",
  "exports": {
    ".": "./src/index.ts",
    "./helpers": "./src/hooks/helpers.ts"
  },
  "imports": {
    "zod": "npm:zod@^3.22.4"
  },
  "tasks": {
    "test": "deno test --allow-read --allow-env",
    "lint": "deno lint src/",
    "check": "deno check src/index.ts",
    "example": "deno run --allow-read --allow-env examples/simple-hooks-deno.ts"
  },
  "lint": {
    "include": [
      "src/",
      "examples/"
    ],
    "exclude": [
      "dist/",
      "node_modules/"
    ]
  },
  "fmt": {
    "include": [
      "src/",
      "examples/"
    ],
    "exclude": [
      "dist/",
      "node_modules/"
    ],
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "semiColons": true,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "compilerOptions": {
    "strict": true,
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "types": [
      "npm:@types/node/globals"
    ]
  },
  "publish": {
    "include": [
      "src/",
      "examples/",
      "README.md",
      "LICENSE",
      "deno.json"
    ]
  }
}
